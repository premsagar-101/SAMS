# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/sams
MONGODB_DB_NAME=sams

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# QR Code Encryption
QR_ENCRYPTION_KEY=your-super-secret-qr-encryption-key-32-bytes
QR_EXPIRY_MINUTES=3

# OAuth Configuration
OAUTH_GOOGLE_CLIENT_ID=your-google-oauth-client-id
OAUTH_GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
OAUTH_MICROSOFT_CLIENT_ID=your-microsoft-oauth-client-id
OAUTH_MICROSOFT_CLIENT_SECRET=your-microsoft-oauth-client-secret

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=sams-assets

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Attendance Configuration
DEFAULT_GEOFENCE_RADIUS=100
GPS_ACCURACY_THRESHOLD=50
MINIMUM_ATTENDANCE_PERCENTAGE=75
LOCATION_VALIDATION_ENABLED=true
DEVICE_FINGERING_ENABLED=true

# Logging Configuration
LOG_LEVEL=info